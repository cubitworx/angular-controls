{
  "name": "angular-controls",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Enhanced form controls for Angular",
  "main": "./dist",
  "module": "./src",
  "types": "./dist",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-dist.json",
    "commit": "git-cz",
    "htmlhint": "htmlhint ./src/**/*.html -c ./.htmlhintrc",
    "lint": "npm run tslint && npm run htmlhint",
    "prerelease": "npm run lint && npm run build && npm run test",
    "start": "webpack-dev-server --inline --progress --port 8080",
    "test": "karma start",
    "tslint": "tslint ./src/**/*.ts -t verbose"
  },
  "author": "Charles Louw <charles.louw@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/cubitworx/angular-controls.git"
  },
  "dependencies": {
    "@angular/common": "^4.0.2",
    "@angular/compiler": "^4.0.2",
    "@angular/core": "^4.0.2",
    "@angular/forms": "^4.0.2",
    "@angular/platform-browser": "^4.0.2",
    "@angular/platform-browser-dynamic": "^4.0.2",
    "angular-i18n": "git://github.com/cubitworx/angular-i18n.git#master",
    "bootstrap-sass": "^3.3.7",
    "bootstrap-select": "^1.12.2",
    "core-js": "^2.4.1",
    "eonasdan-bootstrap-datetimepicker": "git://github.com/Eonasdan/bootstrap-datetimepicker.git#master",
    "jquery": "^3.1.0",
    "js-utility": "git://github.com/cubitworx/js-utility.git#master",
    "lodash": "^4.17.4",
    "rxjs": "^5.2.0",
    "zone.js": "^0.8.5"
  },
  "devDependencies": {
    "@types/eonasdan-bootstrap-datetimepicker": "^4.17.22",
    "@types/jasmine": "^2.5.47",
    "@types/jquery": "^2.0.39",
    "@types/lodash": "^4.14.62",
    "@types/node": "^7.0.12",
    "@types/webpack": "^2.2.8",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.2",
    "commitizen": "^2.8.1",
    "cross-env": "^3.2.3",
    "css-loader": "^0.28.0",
    "cz-conventional-changelog": "^2.0.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "img-loader": "^2.0.0",
    "jasmine": "^2.5.3",
    "jasmine-core": "^2.5.2",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.1",
    "node-sass": "^4.5.2",
    "null-loader": "^0.1.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "to-string-loader": "^1.1.5",
    "tslint": "^5.0.0",
    "typescript": "^2.2.1",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies-tmp": {
    "eonasdan-bootstrap-datetimepicker": "Upgrade to v5 once it is released. Due to issue 1776 - https://github.com/Eonasdan/bootstrap-datetimepicker/issues/1776"
  }
